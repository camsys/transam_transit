= dialog_tag('Mileage Update', {:icon => "#{MileageUpdateEvent.asset_event_type.display_icon_name}", :class => "header_part"}) do
  = format_field("Current Mileage", format_as_integer(@asset_event.current_mileage))
  = format_field("Reported On", format_as_date(@asset_event.event_date))
  = format_field("Comments", @asset_event.comments.html_safe) unless @asset_event.comments.blank?
