.row
  .col-md-3
    = dialog_tag('Asset', {:icon => "fa fa-list", :class => "header_part"}) do
      = render 'assets/summary'
  .col-md-6
    = simple_form_for([@asset, @asset_event],
        :as => :asset_event,
        :url => @asset_event.new_record? ? inventory_asset_events_path(@asset) : inventory_asset_event_path(@asset, @asset_event),
        :method => @asset_event.new_record? ? 'post' : 'put',
        :html => {:class => 'form-vertical' },
        :wrapper => :vertical_form,
        :wrapper_mappings => {:check_boxes => :vertical_radio_and_checkboxes, :radio_buttons => :vertical_radio_and_checkboxes, :file => :vertical_file_input, :boolean => :vertical_boolean}) do |f|
      = hidden_field_tag :event_type, @asset_event.asset_event_type.id
      = dialog_tag('Record Disposition', {:icon => "#{DispositionUpdateEvent.asset_event_type.display_icon_name}", :class => "header_part"}) do
        = f.input :event_date, :label => 'Date of Disposition', :wrapper => :vertical_append do
          = f.input_field :event_date, :as => :string, :class => 'form-control datepicker', :data => {'behavior' => 'datepicker'}, :value => f.object.event_date.strftime("%m-%d-%Y")
          %span.input-group-addon
            %i.fa.fa-calendar
        = f.association :disposition_type, :label => "Disposition Type"
        = f.input :sales_proceeds, :wrapper => :vertical_prepend, :label => "Sales Proceeds" do
          %span.input-group-addon
            %i.fa.fa-usd
          = f.input_field :sales_proceeds, :class => 'form-control'
        = f.input :new_owner_name, :label => "New Owner Name"
        = f.input :address1, :label => "New Owner Address"
        = f.input :address2, :label => "Address 2"
        .row
          .col-sm-6
            = f.input :city
          .col-sm-3
            = f.input :state, :as => :select, :collection => Country['US'].states
          .col-sm-3
            = f.input :zip
        = f.input :comments, :input_html => { :rows => 6 }, :placeholder => "Enter any additional comments..."
        .form-group
          = f.button :submit, "Record the disposition", :class => 'btn btn-primary'
  .col-md-3
    = dialog_tag('Disposition Update Notes', {:icon => 'fa fa-book', :class => "header_part"}) do
      = render 'disposition_update_event_notes'

:javascript

  // Document Ready
  $(document).ready(function(){
    $('[data-behavior~=datepicker]').datepicker({
      format: "mm-dd-yyyy"
    });
    transam.make_same_height('.header_part');
  });
