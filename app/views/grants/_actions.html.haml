.btn-group.pull-right.panel-action
  %button.btn.btn-primary.btn-sm.dropdown-toggle{:data => {:toggle => 'dropdown'}}
    I want to  
    %span.caret
  %ul.dropdown-menu{:role => 'menu'}
    - if can? :update, @grant
      %li
        = link_to edit_grant_path(@grant) do
          %i.fa.fa-edit.fa-fw
          = " Update this grant"
    - if can? :delete, @grant
      %li.divider
      %li
        = link_to edit_grant_path(@grant), :method => :delete, :data => {:confirm => "Are you sure? The action cannot be undone!"}  do
          %i.fa.fa-trash-o.fa-fw
          = " Remove this grant"
