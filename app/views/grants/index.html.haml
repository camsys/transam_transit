.row
  .col-md-12
    .panel.panel-default.header-part
      .panel-heading
        .row
          .col-md-4
            %h3.panel-title
              %i.fa.fa-list
              Grants
          .col-md-8
            = render 'index_actions'
      .panel-body
        - if @grants.empty?
          %p No grants found
        - else
          .col-md-12
            = render :partial => 'grants_table', :locals => {:grants => @grants}
