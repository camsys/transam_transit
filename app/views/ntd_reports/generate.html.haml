        %p
          = link_to download_file_form_ntd_form_ntd_reports_path(@form_type, @form, :filename => @a90_group_filename, :filepath => @a90_group_filepath), :class => "btn btn-primary btn-lg" do
            %i.fa.fa-download
            = "Download A-90 (#{tam_group})"

