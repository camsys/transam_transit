= f.input :component_element_type_id, as: :hidden, value: component_type.id


.form-row-group.clearfix

  = f.input :asset_tag, label: 'Component ID', wrapper_class: 'col-xs-3 row-col left-col form-group'

  = f.input :description, label: 'Sub-Component Description', wrapper_class: 'col-xs-6 row-col middle-col form-group'

  = f.input :manufacture_year, label: 'Year of Manufacture', wrapper_class: 'col-xs-3 row-col right-col form-group', required: false


.form-row-group.clearfix
  = f.association :manufacturer, wrapper_class: 'col-xs-4 row-col left-col form-group'

  = f.association :manufacturer_model, label: 'Model', wrapper_class: 'col-xs-4 row-col middle-col form-group'

  = f.association :component_subtype, collection: ComponentSubtype.where(parent: component_type), label: 'Signal Type', wrapper_class: 'col-xs-4 row-col right-col form-group'
