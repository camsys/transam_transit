:css
  .form-section { 
    padding: 1.5em;
  }
  .form-section-header { 
    font-size: 1.5em; 
    margin-bottom: .5em; 
    color: #a7a7a7;
    font-weight: normal;

  }
  .form-section-subheader { 
    font-size: 1.25em; 
    margin-bottom: .5em; 
    color: #17406E
  }
  .form-section-header:not(:first-child) { 
    margin-top: 1.75em;
  }
  .form-group { 
    margin: 1em 0;
  }
  .radio-buttons-inline > label { 
    display: block; width: 100% 
  }
  .radio-buttons-inline .radio { 
    display: inline-block; margin-top: 0 
  }
  .radio-buttons-inline .radio:not(:first-of-type) { 
    margin-left: 1em;
  }
  .form-section .form-row-group .row-col .row-col.left-col { 
    padding-left: 0;
    padding-right: .5em;
  } 
  .form-section .form-row-group .row-col .row-col.middle-col { 
    padding-right: .5em;
    padding-left: .5em;
  }
  .form-section .form-row-group .row-col .row-col.right-col { 
    padding-right: 0;
    padding-left: .5em;
  } 
  @media (min-width: 768px) { 
    .form-section .tab-pane>.col-sm-6:nth-child(2n-1) { 
      padding-right: 2em; 
      /*border-right: 1px solid #17406E;*/
      }
    .form-section .tab-pane>.col-sm-6:nth-child(2n) { 
      padding-left: 2em 
    }
    .form-section.tab-content {
      position: relative;
    }
    form>.form-section>.tab-pane:not(.no-divide)::after {
      position: absolute;
      content: '';
      width: 1px;
      height: 100%;
      height: calc(100% - 1em);
      background-color: #17406E;
      top: 1em;
      left: 50%;
    }

  }
  @media (min-width: 1200px) {
    .form-section .form-row-group .add-colon-parent {
      position: relative;
    }
    .form-section .form-row-group .add-colon::after {
      content: ':';
      position: absolute;
      right: -1.5em;
      bottom: 0px;
      width: 3em;
      height: 2em;
      line-height: 2em;
      text-align: center;
      font-weight: bold;
      top: 50%;
    }
    .form-section .form-row-group .row-col .add-colon::after {
      width: 1.5em;
    }
    .form-section .form-row-group .row-col.left-col { 
      padding-left: 0;
      padding-right: 1em;
    } 
    .form-section .form-row-group .row-col.right-col { 
      padding-right: 0;
      padding-left: 1em;
    } 
  }

