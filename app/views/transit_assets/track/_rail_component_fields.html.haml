- component_type = ComponentType.find_by(name: 'Rail', class_name: 'Infrastructure')
.nested-fields
  = f.input :component_type_id, as: :hidden, value: component_type.id
  = f.input :asset_tag
  = f.input :description
  = f.association :manufacturer
  = f.association :manufacturer_model
  = f.input :manufacture_year
  = f.input :infrastructure_measurement, label: 'Rail Length'
  = f.input :infrastructure_measurement_unit, label: 'Rail Length Unit'
  = f.input :infrastructure_weight, label: 'Rail Weight'
  = f.input :infrastructure_weight_unit, label: 'Rail Weight Unit'
  = f.association :component_subtype, collection: ComponentSubtype.where(component_type: component_type)
  = f.association :infrastructure_rail_joining

  = link_to_remove_association "remove", f