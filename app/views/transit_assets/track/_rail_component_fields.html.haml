.form-row-group.clearfix
  .col-md-6.row-col.left-col
    = f.input :asset_tag, label: 'Component ID', wrapper_class: 'col-xs-4 row-col left-col form-group'
    = f.input :description, label: 'Component Description', wrapper_class: 'col-xs-8 row-col middle-col form-group'
    = f.input :manufacturer_id, as: :hidden, input_html: {value: Manufacturer.find_by(code: 'ZZZ', filter: 'Equipment').id}
    = f.input :other_manufacturer, wrapper_class: 'col-xs-4 row-col right-col form-group'
  .col-md-6.row-col.right-col
    = f.input :manufacturer_model_id, as: :hidden, input_html: {value: ManufacturerModel.find_by(name: 'Other').id}
    = f.input :other_manufacturer_model, label: 'Model', wrapper_class: 'col-xs-8 row-col left-col form-group'
    = f.input :manufacture_year, label: 'Year of Manufacture', required: false, wrapper_class: 'col-xs-4 row-col right-col form-group'
.form-row-group.clearfix
  .col-md-3.row-col.left-col
    = f.input :infrastructure_measurement, label: 'Length (per rail)', wrapper_class: 'col-xs-6 row-col left-col form-group'
    = f.input :infrastructure_measurement_unit, label: 'Unit', wrapper_class: 'col-xs-6 row-col right-col form-group'
  .col-md-3.row-col.middle-col
    = f.input :infrastructure_weight, label: 'Weight', wrapper_class: 'col-xs-6 row-col left-col form-group'
    = f.input :infrastructure_weight_unit, label: 'Unit', wrapper_class: 'col-xs-6 row-col right-col form-group'
  .col-md-6.row-col.right-col
    = f.association :component_subtype, collection: ComponentSubtype.where(parent: component_type), label: 'Rail Type', wrapper_class: 'col-xs-6 row-col left-col form-group'
    = f.association :infrastructure_rail_joining, label: 'Rail Joining', wrapper_class: 'col-xs-6 row-col left-col form-group'