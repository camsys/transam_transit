= f.input :component_element_type_id, as: :hidden, value: component_type.id

.form-row-group.clearfix
  .col-md-6.row-col.left-col
    = f.input :asset_tag, label: 'Component ID', wrapper_class: 'col-xs-6 row-col left-col form-group'
    = f.input :quantity, wrapper_class: 'col-xs-6 row-col middle-col form-group'
  .col-md-6.row-col.right-col
    = f.association :manufacturer

.form-row-group.clearfix
  = f.association :manufacturer_model, label: 'Model', wrapper_class: 'col-md-6 row-col left-col form-group'

  = f.input :manufacture_year, label: 'Year of manufacture', wrapper_class: 'col-md-3 row-col middle-col form-group', required: false

  = f.association :component_subtype, collection: ComponentSubtype.where(parent: component_type), label: 'Joint Type', wrapper_class: 'col-md-3 row-col right-col form-group'