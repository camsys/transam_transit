- component_type = ComponentType.find_by(name: 'Ties', class_name: 'Infrastructure')
.nested-fields
  = f.input :component_type_id, as: :hidden, value: component_type.id
  = f.input :asset_tag
  = f.input :description
  = f.input :quantity
  = f.association :manufacturer
  = f.association :manufacturer_model
  = f.input :manufacture_year
  = f.association :component_material, collection: ComponentMaterial.where(component_type: component_type),label: 'Tie Material'
  = f.association :component_subtype, collection: ComponentSubtype.where(component_type: component_type), label: 'Tie/Ballastless Form'

  = link_to_remove_association "remove", f