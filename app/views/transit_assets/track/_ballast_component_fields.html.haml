.form-row-group.clearfix
  .col-md-4.row-col.left-col
    = f.input :asset_tag, label: 'Component ID', wrapper_class: 'col-xs-4 row-col left-col form-group'
    = f.input :description, label: 'Component Description', wrapper_class: 'col-xs-8 row-col right-col form-group'

  .col-md-8.row-col.right-col
    = f.input :quantity, wrapper_class: 'col-xs-3 row-col left-col form-group'
    = f.input :quantity_unit, collection: Uom::WEIGHT_DISTANCE_UNITS, label: 'Unit', wrapper_class: 'col-xs-3 row-col middle-col form-group'
    = f.input :manufacturer_id, as: :hidden, input_html: {value: Manufacturer.find_by(code: 'ZZZ', filter: 'Equipment').id}
    = f.input :other_manufacturer, wrapper_class: 'col-xs-6 row-col right-col form-group'

.form-row-group.clearfix
  = f.input :manufacturer_model_id, as: :hidden, input_html: {value: ManufacturerModel.find_by(name: 'Other').id}
  = f.input :other_manufacturer_model, label: 'Model', wrapper_class: 'col-md-6 row-col left-col form-group'

  = f.input :manufacture_year, label: 'Year of manufacture', wrapper_class: 'col-md-3 row-col middle-col form-group', required: false

  = f.association :component_element, collection: ComponentElement.where(parent: component_type), label: 'Ballast Type', wrapper_class: 'col-md-3 row-col right-col form-group'