- unless @asset.new_record?
  = editable_asset_association_tag(@asset, :operator, include_blank: true)
  = editable_asset_field_tag(@asset, :other_operator)
  = editable_asset_field_tag(@asset, :in_service_date, type: 'date')
  = editable_asset_association_tag(@asset, :primary_fta_mode_type_id, 'Primary Mode', FtaModeType.pluck(:id, :name))

  = editable_asset_association_tag(@asset, :secondary_fta_mode_type_ids, 'Secondary Mode(s)', FtaModeType.pluck(:id, :name), current_method: :secondary_fta_mode_type_ids, type: 'checklist')
