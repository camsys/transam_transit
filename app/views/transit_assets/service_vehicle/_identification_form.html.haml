- unless @asset.new_record?
  = editable_asset_field_tag(@asset,'serial_number', 'Vehicle Identification Number (VIN)')
  = editable_asset_field_tag(@asset, :asset_tag, 'Asset ID')
  = editable_asset_field_tag(@asset, 'external_id', 'External ID', required: false)

  .form-group
    %label.control-label
      NTD ID
    .display-value
      = @asset.ntd_id
  = editable_asset_association_tag(@asset, :fta_asset_class, 'Class')
  = editable_asset_association_tag(@asset, :global_fta_type, 'Type', FtaSupportVehicleType.active.collect{|f| ["#{f.to_global_id}", "#{f.to_s}"]})
  = editable_asset_association_tag(@asset, :asset_subtype_id, 'Subtype', AssetSubtype.where(asset_type: AssetType.where(class_name: 'SupportVehicle')).collect{|x| [x.id, x.name]})

