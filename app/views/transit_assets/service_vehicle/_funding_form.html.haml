%legend
  Funding
- unless @asset.new_record?

  .row.border-between
    .col-sm-6
      - SystemConfig.transam_module_names.each do |mod|
        - if lookup_context.template_exists?("#{mod}_asset_form", 'assets', true)
          = render :partial => "assets/#{mod}_asset_form", :locals => {:asset => @asset}


      = editable_asset_field_tag(@asset, :purchase_cost, 'Purchase Cost *', required: true, type: 'number', min: 1)
    .col-sm-6
      .row
        .col-sm-6
          .form-group.form-inline
            %label.control-label
              Direct Capital Responsibility
            .display-value
              %span.radio
                %label
                  = radio_button_tag :direct_capital_responsibility, 'yes', @asset.direct_capital_responsibility
                  Yes
              %span.radio
                %label
                  = radio_button_tag :direct_capital_responsibility, 'no', !@asset.direct_capital_responsibility
                  No
        .col-sm-6
          = editable_asset_field_tag(@asset, :pcnt_capital_responsibility, '% Capital Responsibility', type: 'number', min: 1, max: 100)

