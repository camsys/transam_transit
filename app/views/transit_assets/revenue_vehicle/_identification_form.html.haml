- unless @asset.new_record?
  = editable_asset_field_tag(@asset,'serial_number', 'Vehicle Identification Number (VIN)')
  = editable_asset_field_tag(@asset, :asset_tag, 'Asset ID')
  = editable_asset_field_tag(@asset, 'external_id', 'External ID', required: false)

  .form-group
    %label.control-label
      NTD ID
    .display-value
      = @asset.ntd_id
  = editable_asset_association_tag(@asset, :fta_asset_class, 'FTA Asset Class')

  = editable_asset_association_tag(@asset, :global_fta_type, 'Global FTA Type', FtaVehicleType.all.collect{|f| ["#{f.to_global_id}", "#{f.to_s}"]})
  = editable_asset_association_tag(@asset, :asset_subtype, 'Subtype', AssetSubtype.where(asset_type: AssetType.where(class_name: 'Vehicle')))
  = editable_asset_association_tag(@asset, :esl_category, 'ESL Category')

