- unless @asset.new_record?
  = editable_asset_association_tag(@asset, :parent, 'Facility Name', Facility.where(organization_id: current_user.viewable_organization_ids).or(Facility.where(id: @asset.parent_id)).collect{|x| [x.id, x.name]})
  = editable_asset_field_tag(@asset, :asset_tag, 'Asset ID')
  = editable_asset_field_tag(@asset, :external_id, 'External ID', required: false)

  = editable_asset_association_tag(@asset, :fta_asset_class, 'Class')
  = editable_asset_association_tag(@asset, :global_fta_type, 'Type', FtaFacilityType.all.collect{|f| ["#{f.to_global_id}", "#{f.to_s}"]})
  = editable_asset_association_tag(@asset, :asset_subtype_id, 'Subtype', AssetSubtype.where(asset_type: AssetType.where(class_name: ['TransitFacility', 'SupportFacility'])).collect{|x| [x.id, x.name]})

  = editable_asset_association_tag(@asset, :component_type)
  = editable_asset_association_tag(@asset, :component_subtype)

  = editable_asset_field_tag(@asset, :description)
  = editable_asset_field_tag(@asset, :quantity, required: true, type: 'number', min: 1)
  = editable_asset_association_tag(@asset, :quantity_unit, nil, Uom.units.collect{|u| [u, u.titleize]})

  .form-group
    %label.control-label
      Serial Numbers
    - @asset.serial_numbers.each do |sn|
      .display-value
        = sn.to_s
