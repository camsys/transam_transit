:ruby
  table_dom_id = SecureRandom.hex
  show_actions ||= 0

- if show_actions == 1
  #table_actions.btn-group
    = render :partial => "funding_sources/index_actions"

%table.table.table-hover{:id => table_dom_id, :data => {:toggle => 'table',
  :pagination => 'true',
  :show_pagination_switch => 'true',
  :page_list => "[5, 10, 20, 50, 100, 200]",
  :page_size => current_user.num_table_rows,
  :search => 'false',
  :toolbar => "#table_actions",
  :export_types => "['csv', 'txt', 'excel']",
  :show_export => 'true',
  :show_columns => 'true',
  :show_toggle => 'true'}}
  %thead
    %tr
      %th.left{:data => {:visible => 'false'}} Object Key
      %th.left{:data => {:visible => 'false', :sortable => 'true'}} External ID
      %th.left{:data => {:sortable => 'true'}} Name
      %th.left{:data => {:sortable => 'true'}} Type

      %th.center{:data => {:sortable => 'true'}} SAFF
      %th.center{:data => {:sortable => 'true'}} Bond
      %th.center{:data => {:sortable => 'true'}} Formula
      %th.center{:data => {:sortable => 'true'}} Non-Committed
      %th.center{:data => {:sortable => 'true'}} Contracted
      %th.center{:data => {:sortable => 'true'}} Discretionary

      %th.right{:data => {:sortable => 'true'}} State
      %th.right{:data => {:sortable => 'true'}} Federal
      %th.right{:data => {:sortable => 'true'}} Local

      %th.center{:data => {:sortable => 'true'}} Rural
      %th.center{:data => {:sortable => 'true'}} Urban
      %th.center{:data => {:sortable => 'true'}} Shared Ride
      %th.center{:data => {:sortable => 'true'}} ICB
      %th.center{:data => {:sortable => 'true'}} ICR

  %tbody
    - funding_sources.each do |f|
      %tr{:id => f.object_key, :class => 'action-path'}
        %td.left= f.object_key
        %td.left= f.external_id
        %td.left= f.name
        %td.left= f.funding_source_type

        %td.center= format_as_boolean(f.state_administered_federal_fund)
        %td.center= format_as_boolean(f.bond_fund)
        %td.center= format_as_boolean(f.formula_fund)
        %td.center= format_as_boolean(f.non_committed_fund)
        %td.center= format_as_boolean(f.contracted_fund)
        %td.center= format_as_boolean(f.discretionary_fund)

        %td.right= format_as_percentage(f.state_match_required, 3)
        %td.right= format_as_percentage(f.federal_match_required, 3)
        %td.right= format_as_percentage(f.local_match_required, 3)

        %td.center= format_as_boolean(f.rural_providers)
        %td.center= format_as_boolean(f.urban_providers)
        %td.center= format_as_boolean(f.shared_ride_providers)
        %td.center= format_as_boolean(f.inter_city_bus_providers)
        %td.center= format_as_boolean(f.inter_city_rail_providers)

:javascript

  var path = '#{funding_source_path("0")}';

  $('##{table_dom_id}').on('click-row.bs.table', function (e, row, $element) {
    //alert($element.attr('id'));
    var url = path.replace("0", $element.attr('id'));
    //alert(url);
    document.location.href = url;
  }).on('post-body.bs.table', function() {
    $('.fixed-table-container').css('min-height', '300px')
  });

  $(window).resize(function() {
    $("##{table_dom_id}").bootstrapTable('resetView');
  });
