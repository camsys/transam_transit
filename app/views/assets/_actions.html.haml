.btn-group.pull-right.panel-action
  %button.btn.btn-primary.btn-sm.dropdown-toggle{:data => {:toggle => 'dropdown'}}
    I want to  
    %span.caret
  %ul.dropdown-menu{:role => 'menu'}

    - if can? :update, @asset

      - if @asset.type_of? :vehicle or @asset.type_of? :support_vehicle
        %li
          = link_to new_inventory_asset_event_path(@asset, :event_type => MileageUpdateEvent.asset_event_type.id) do
            %i.fa.fa-fw{:class => MileageUpdateEvent.asset_event_type.display_icon_name}
            = " Update the mileage"

      - if @asset.type_of? :vehicle
        %li
          = link_to new_inventory_asset_event_path(@asset, :event_type => UsageCodesUpdateEvent.asset_event_type.id) do
            %i.fa.fa-fw{:class => UsageCodesUpdateEvent.asset_event_type.display_icon_name}
            = " Update the usage codes"

    - if @asset.type_of? :rolling_stock
      %li
        = link_to new_inventory_asset_event_path(@asset, :event_type => LocationUpdateEvent.asset_event_type.id) do
          %i.fa.fa-fw{:class => LocationUpdateEvent.asset_event_type.display_icon_name}
          = " Update the storage location"

      %li
        = link_to new_inventory_asset_event_path(@asset, :event_type => StorageMethodUpdateEvent.asset_event_type.id) do
          %i.fa.fa-fw{:class => StorageMethodUpdateEvent.asset_event_type.display_icon_name}
          = " Update the storage method"

      %li
        = link_to new_inventory_asset_event_path(@asset, :event_type => UsageUpdateEvent.asset_event_type.id) do
          %i.fa.fa-fw{:class => UsageUpdateEvent.asset_event_type.display_icon_name}
          = " Update the usage metrics"

      %li
        = link_to new_inventory_asset_event_path(@asset, :event_type => OperationsUpdateEvent.asset_event_type.id) do
          %i.fa.fa-fw{:class => OperationsUpdateEvent.asset_event_type.display_icon_name}
          = " Update the operation metrics"

    %li
      = link_to new_inventory_asset_event_path(@asset, :event_type => ConditionUpdateEvent.asset_event_type.id) do
        %i.fa.fa-fw{:class => ConditionUpdateEvent.asset_event_type.display_icon_name}
        = " Update the condition"

    %li
      = link_to new_inventory_asset_event_path(@asset, :event_type => ServiceStatusUpdateEvent.asset_event_type.id) do
        %i.fa.fa-fw{:class => ServiceStatusUpdateEvent.asset_event_type.display_icon_name}
        = " Update the service status"

    %li
      = link_to new_inventory_asset_event_path(@asset, :event_type => MaintenanceProviderUpdateEvent.asset_event_type.id) do
        %i.fa.fa-fw{:class => MaintenanceProviderUpdateEvent.asset_event_type.display_icon_name}
        = " Update the maintenance provider type"

    %li.divider
    %li
      = link_to new_inventory_asset_event_path(@asset, :event_type => ScheduleReplacementUpdateEvent.asset_event_type.id) do
        %i.fa.fa-fw{:class => ScheduleReplacementUpdateEvent.asset_event_type.display_icon_name}
        = " Schedule replacement/rehabilitation"

    %li
      = link_to new_inventory_asset_event_path(@asset, :event_type => ScheduleDispositionUpdateEvent.asset_event_type.id) do
        %i.fa.fa-fw{:class => ScheduleDispositionUpdateEvent.asset_event_type.display_icon_name}
        = " Schedule disposition"


    - if can? :update, @asset
      %li.divider
      %li
        = link_to edit_inventory_path(@asset) do
          %i.fa.fa-fw.fa-edit
          = " Update the master record"

      %li.divider      
      %li
        = link_to copy_inventory_path(@asset) do
          %i.fa.fa-fw.fa-copy
          = " Make a copy"

      %li.divider
      %li
        = link_to new_inventory_asset_event_path(@asset, :event_type => DispositionUpdateEvent.asset_event_type.id) do
          %i.fa.fa-fw{:class => DispositionUpdateEvent.asset_event_type.display_icon_name}
          = " Record final dispostion"

    - if can? :delete, @asset
      %li.divider
      %li
        = link_to inventory_path(@asset), :method => :delete, :data => {:confirm => "Are you sure you want to remove this asset?. The action can't be undone."} do
          %i.fa.fa-fw.fa-trash-o
          = " Remove this asset"
          