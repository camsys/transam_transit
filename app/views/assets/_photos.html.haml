.row
  .col-md-12{:style => 'height:150px;overflow-y:auto;'}
    - if @asset.images.empty?
      %p There are no photos for this asset.
    - else
      - @asset.images.each do |p|
        = link_to image_tag(p.image.url(:thumb)), p.image.url, :alt => "#{p.description}", :class => "img-responsive gallery-image thumbnail col-md-2 col-sm-4 col-xs-6", :data => {:lightbox => 'true '}

.row
  .col-md-12
    %fieldset
      %legend Add Photo
      = simple_form_for([@asset, Image.new],
          :url => inventory_images_path(@asset, Image.new),
          :html => {:multipart => true, :class => 'form-vertical' },
          :wrapper => :vertical_form,
          :wrapper_mappings => {:check_boxes => :vertical_radio_and_checkboxes, :radio_buttons => :vertical_radio_and_checkboxes, :file => :vertical_file_input, :boolean => :vertical_boolean}) do |f|
        = f.input :image, :required => true
        = f.input :description, :as => :text, :placeholder => 'Enter a brief description of the photo...', :required => true, :minlength => 10
        = f.submit "Add Photo", :class => 'btn btn-primary', :id => 'image_submit'

