%fieldset
  %legend.panel-legend Facility
  = format_field("Name", @asset.description )
  = format_field("Address", format_as_address(@asset) )
  = format_field("Land Ownership", @asset.land_ownership_type )
  = format_field("Land Owner", @asset.land_owner_organization )
  = format_field("Building Ownership", @asset.building_ownership_type )
  = format_field("Building Owner", @asset.building_owner_organization )
%fieldset
  %legend.panel-legend Structure
  = format_field("Year Built", @asset.manufacture_year )
  = format_field("Facility Size", format_as_integer(@asset.facility_size) )
  = format_field("Percent Operational", format_as_percentage(@asset.pcnt_operational) )
  = format_field("Num. Structures", @asset.num_structures )
  = format_field("Num. Floors", @asset.num_floors )
  = format_field("Num. Elevators", @asset.num_elevators )
  = format_field("Num. Escalators", @asset.num_escalators )
  = format_field("Lot Size", format_as_integer(@asset.lot_size) )
  = format_field("Features", format_as_list(@asset.facility_features))
