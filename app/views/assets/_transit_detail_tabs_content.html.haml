.tab-pane.fade#identify
  .tab-content
    = render "transit_assets/#{@asset.class.name.underscore}_identification_form"
.tab-pane.fade#chars
  .tab-content
    = render "transit_assets/#{@asset.class.name.underscore}_characteristics_form"
.tab-pane.fade#fund
  .tab-content
    = render "transit_assets/#{@asset.class.name.underscore}_funding_form"
.tab-pane.fade#purchase
  .tab-content
    = render "transit_assets/#{@asset.class.name.underscore}_purchase_form"
.tab-pane.fade#ops
  .tab-content
    = render "transit_assets/#{@asset.class.name.underscore}_operations_form"
.tab-pane.fade#reg
  .tab-content
    = render "transit_assets/#{@asset.class.name.underscore}_registration_form"
.tab-pane.fade#fta
  .tab-content
    - if @asset.fta_asset_category.name == 'Facilities'
      = format_field("TERM Threshold", @asset.useful_life_benchmark)
    - else
      = format_field("Useful Life Benchmark", @asset.useful_life_benchmark)
      = format_field("Useful Life Remanining", @asset.useful_life_remaining)
- if (@asset.respond_to? :asset_fleets) && @asset.asset_fleets.count > 0
  .tab-pane.fade#fleets
    .tab-content
      = format_field(@asset.asset_fleets.first.ntd_id_label, format_as_list(@asset.asset_fleets.map{|x| link_to x.to_s, asset_fleet_path(x)}))