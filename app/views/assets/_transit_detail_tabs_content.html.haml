.tab-pane.fade#fta
  .tab-content
    = render "#{@asset.class.name.underscore}_fta"
    - if @asset.fta_asset_category.name == 'Facilities'
      = format_field("TERM Threshold", @asset.useful_life_benchmark)
    - else
      = format_field("Useful Life Benchmark", @asset.useful_life_benchmark)
      = format_field("Useful Life Remanining", @asset.useful_life_remaining)
