.row
  .col-md-12
    .well.well-small
      #timeline{:style => 'height:175px;background-color:#FFF;'}

.row
  .col-md-12{:style => 'overflow-y:auto;height:150px;'}
    %table.table.table-condensed.table-striped.table-hover.table-bordered{:id => 'datatable'}
      %thead
        %tr
          %th Event
          %th Date
          %th Update
          %th Notes
      %tbody
        - @asset.history.order(:created_at => :desc).each do |evt|
          %tr{:data => {:action_path => "#{inventory_asset_event_path(@asset, evt)}"}}
            %td
              = evt.asset_event_type.description
            %td
              = format_as_date(evt.event_date)
            %td
              = evt.get_update
            %td
              = evt.comments.blank? ? " " : evt.comments.html_safe