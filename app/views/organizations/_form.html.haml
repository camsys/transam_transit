.row
  = simple_form_for(@org,
  :as => :organization,
  :url => @org.new_record? ? organizations_path : organization_path,
  :method => @org.new_record? ? 'post' : 'put',
  :html => {:class => 'form-vertical org_form'},
  :wrapper => :vertical_form,
  :wrapper_mappings => {:check_boxes => :vertical_radio_and_checkboxes,
    :radio_buttons => :vertical_radio_and_checkboxes,
    :file => :vertical_file_input,
    :boolean => :vertical_boolean}) do |f|
    .col-md-4
      = dialog_tag('Corporate', {:icon => 'fa fa-book', :class => "header-part"}) do
        - if @org.new_record? # for now only allow organization type of planning partern
          = f.input :organization_type_id, :as => :hidden
          = f.input :customer_id, :as => :hidden, :input_html => {:value => Customer.first.id}
          = f.input :grantor_id, :as => :hidden, :input_html => {:value => Grantor.first.id}
        = f.input :name
        = f.input :short_name, :label => "Acronym"
        = f.input :external_id, :label => 'External ID'
        = f.association :governing_body_type
        = f.input :governing_body
        = f.input :indian_tribe, :label => "Indian Tribe", :as => :select, :include_blank => false
        = f.input :subrecipient_number, :label => "FTA Recipient ID"
        = f.input :ntd_id_number, :label => "NTD ID Number"
        = f.association :fta_agency_type, :label => "Agency Type"
    .col-md-4
      = dialog_tag('Contact', {:icon => 'fa fa-book', :class => "header-part"}) do
        = f.input :phone, :as => :tel
        = f.input :fax, :as => :tel
        = f.input :url, :as => :url
        = f.input :address1, :label => "Address 1"
        = f.input :address2, :label => "Address 2"
        .row
          .col-sm-6
            = f.input :city
          .col-sm-3
            = f.input :state, :as => :select, :collection => Country['US'].states
          .col-sm-3
            = f.input :zip
        - if User.new.respond_to? :email_in_org_domain_list
          = f.input :allowed_email_domains, :required => true, :label => 'Allowed Email Domains', :placeholder => 'To enter more than one domain, separate with |'

    .col-md-4
      = dialog_tag('Services', {:icon => 'fa fa-book', :class => "header-part"}) do
        = f.association :fta_mode_types, :label => "Services Provided", :multiple => true, :as => :check_boxes
        = f.association :fta_service_area_type, :label => "Service Area"
        = f.association :districts, :label => "Districts/Counties Served"
        = f.association :service_provider_types if @org.respond_to? :service_provider_types

        - if @org.type_of? TransitOperator
          = f.association :planning_partners, :collection => PlanningPartner.active
        - elsif @org.type_of? PlanningPartner
          = f.association :transit_operators, :collection => TransitOperator.active

    .col-md-12
      = f.button :submit, :class => 'btn btn-primary'

:javascript
  // jquery validations
  $('.org_form').validate({
    submitHandler: function(form) {
      form.submit();
    }
  });