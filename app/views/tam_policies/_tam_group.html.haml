- if @tam_group
  %fieldset
    %legend
      = "#{@tam_policy} : #{@tam_group}"
      .pull-right{style: 'margin-top: -15px;'}
        - if (can? :manage, TamGroup) && @tam_group.can_distribute?
          = link_to distribute_rule_set_tam_policy_tam_group_path(@rule_set_type, @tam_policy, @tam_group), :class => "btn btn-primary btn-sm", :title => 'Distribute' do
            Distribute

    .table-responsive
      %table.table.table-condensed
        %thead
          %tr
            %th.center Asset Category
            %th.center Status
            - unless @tam_group.organization
              %th.center Organizations
            %th.center Copied From Previous Year
            %th.center
        %tbody
          %tr
            %td.center= select_tag(:fta_asset_categories, options_for_select(@tam_group.fta_asset_categories.collect{|a| [a.name, a.id]}, :selected => @fta_asset_category.try(:id)), :class => 'form-control')
            %td.center= @tam_group.state.humanize.titleize
            - unless @tam_group.organization
              %td.center= format_as_list(@tam_group.organizations)
            %td.center= format_as_boolean(@tam_policy.copied)
            %td.center

  #fta_asset_category_div
    = render 'tam_policies/fta_asset_category'

= render 'scripts'