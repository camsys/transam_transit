- if (can? :update, @asset_fleet)
  .btn-group.pull-right.panel-action
    %button.btn.btn-primary.btn-sm.dropdown-toggle{:data => {:toggle => 'dropdown'}}
      %i.fa.fa-cog
      = " Actions"
      %span.caret
    %ul.dropdown-menu{:role => 'menu'}
      %li
        = link_to edit_asset_fleet_path(@asset_fleet) do
          %i.fa.fa-edit.fa-fw
          = " Update this fleet"
      - if can? :destroy, @asset_fleet
        %li.divider
        %li
          = link_to asset_fleet_path(@asset_fleet), :method => :delete, :data => {:confirm => "Are you sure? The action cannot be undone."}  do
            %i.fa.fa-trash-o.fa-fw
            = " Remove this fleet"