%fieldset
  %legend All Transit Operators
  %table.table
    %thead
      %tr
        %th.left #{get_fiscal_year_label}
        %th.left Category
        %th.left Class
        %th.left Type
        %th.right Count
        %th.right Book Value
        %th.right Replacement Cost
    %tbody
      - sum_book_val = 0
      - sum_cost = 0
      - @data.assets.group(:fta_type, :asset_subtype).each do |assets|
        %tr
          %td.left= format_as_fiscal_year(@data.fy)
          %td.left= fta_type.fta_asset_class.fta_asset_category
          %td.left= fta_type.fta_asset_class
          %td.left= fta_type
          %td.right= format_as_integer(assets.count)
          - book_val = assets.sum{ |a| a.book_value.to_i }
          - cost = assets.sum{ |a| a.scheduled_replacement_cost.to_i }
          - sum_book_val += book_val
          - sum_cost += cost
          %td.right= format_as_currency(book_val)
          %td.right= format_as_currency(cost)
    %tfoot
      %tr
        %td
        %td
        %td.left= "Totals for #{format_as_fiscal_year(@data.fy)}"
        %td
        %td.right= format_as_integer(@data.assets.count)
        %td.right= format_as_currency(sum_book_val)
        %td.right= format_as_currency(sum_cost)
